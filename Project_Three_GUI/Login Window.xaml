<Window x:Class="Project_Three_GUI.Login_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Three_GUI"
        mc:Ignorable="d"
        Title="Login_Window" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="UsernameBox" HorizontalAlignment="Left" Height="23" Margin="143,210,0,0" TextWrapping="Wrap" Text="Username" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="PasswordBox" HorizontalAlignment="Left" Height="23" Margin="188,282,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="LoginButton" Content="Button" HorizontalAlignment="Left" Margin="481,305,0,0" VerticalAlignment="Top" Width="75" Click="LoginButton_Click"/>
        <Label x:Name="Message" Content="Oops! Incorrect user name or password." HorizontalAlignment="Left" Margin="556,210,0,0" VerticalAlignment="Top" Visibility="Hidden"/>


    </Grid>
</Window>
